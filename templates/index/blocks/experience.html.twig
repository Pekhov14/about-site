<section class="border-top" id="defaultProcess">
    <div class="container">
        <div class="row justify-content-center text-center mb-6">
            <div class="col-lg-6">
                <h2 class="fs-3 fs-sm-4 text-decoration-underline mb-3">Work experience and training</h2>
                <hr class="hr-short mt-5">
            </div>
        </div>
        <div class="row">
            <div class="col-12 ps-lg-7">
                {% for key, exp in experiences %}
                    <div class="row align-items-end">
                        <div class="col-lg-12 border-lg-start pb-lg-8 mt-4 mt-lg-0 mb-8 mb-lg-0">
                            <div class="process-item ms-6 ms-sm-8 ms-lg-6"><span class="process-item-number">0{{ experiences|length - key }}</span>
                                <h3>{{ exp.type }}</h3>
                                <p>{{ exp.name }}</p>
                                <p>{{ exp.description|raw }}</p>
                                <p>
                                    <span>{{ exp.date_start|date("F Y") }}</span>
                                    <span> - </span>
                                    <span>{% if exp.date_end != 'Present' %} {{ exp.date_end|date("F Y") }} {% endif %}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>