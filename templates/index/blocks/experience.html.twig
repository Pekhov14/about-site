<section class="border-top" id="defaultProcess">
    <div class="container">
        <div class="row justify-content-center text-center mb-6">
            <div class="col-lg-6">
                <h2 class="fs-3 fs-sm-4 text-decoration-underline mb-3">Work experience and training</h2>
                <hr class="hr-short mt-5">
            </div>
        </div>
        <div class="row">
            <div class="col-12 ps-lg-7">
                {{ dump(experiences) }}

                {% for exp in experiences %}
                    <div class="row align-items-end">
                        <div class="col-lg-6 border-lg-start border-lg-bottom pb-lg-8 mt-4 mt-lg-0 mb-8 mb-lg-0">
                            <div class="process-item ms-6 ms-sm-8 ms-lg-6"><span class="process-item-number">01</span>
                                <h3>{{ exp.type }}</h3>
                                <p>{{ exp.name }}</p>
                                <p>{{ exp.description|raw }}</p>
                                <p>{{ exp.date_start }} - {{ exp.date_end }}</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>